<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#e03f30"
        android:id="@+id/relativeLayout"
        android:fitsSystemWindows="true" >

        <TextView
            android:id="@+id/title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:text="我的任务"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/login_out"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/loginout"
            android:visibility="visible" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_add"
            android:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/exam_tab"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="-1dp"
            android:textSize="16sp"
            android:textColor="@color/red"
            android:background="@drawable/btn_selector_l"
            android:state_pressed="true"
            android:text="考试" />

        <Button
            android:id="@+id/homework_tab"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@color/red"
            android:background="@drawable/btn_selector_m"
            android:text="作业" />

        <Button
            android:id="@+id/exercise_tab"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-1dp"
            android:text="练习"
            android:textSize="16sp"
            android:background="@drawable/btn_selector_r"
            android:textColor="@color/red" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

    <ListView
        android:id="@+id/task_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:headerDividersEnabled="true" />


</LinearLayout>