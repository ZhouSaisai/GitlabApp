<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/exam_tab"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="-1dp"
            android:textSize="16sp"
            android:textColor="@color/red"
            android:background="@drawable/btn_selector_l"
            android:state_pressed="true"
            android:text="考试" />

        <Button
            android:id="@+id/homework_tab"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@color/red"
            android:background="@drawable/btn_selector_m"
            android:text="作业" />

        <Button
            android:id="@+id/exercise_tab"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
           android:layout_marginLeft="-1dp"
            android:text="练习"
            android:textSize="16sp"
            android:background="@drawable/btn_selector_r"
            android:textColor="@color/red" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

    <ListView
        android:id="@+id/task_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:headerDividersEnabled="true" />


</LinearLayout>